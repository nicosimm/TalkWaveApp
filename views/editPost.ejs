        <body>
            <div class="container">
                <div class="text-center" style="color: #c8e6c9;">
                    <h2>Edit Post</h2>
                </div>
                <% if (post) { %>
                    <form action="/editPost/<%= post.postId %>" method="POST" class="mt-4">
                        <div class="mb-3">
                            <label for="title" class="form-label">Post Title:</label>
                            <input type="text" id="title" name="postName" class="form-control" value="<%= post.postName %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="details" class="form-label">Post Details:</label>
                            <textarea id="details" name="postDetails" class="form-control" required><%= post.postDetails %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                <% } else { %>
                    <div class="text-center mt-4">
                        <p style="color: #ff6f61;">No post found.</p>
                    </div>
                <% } %>
                <div class="text-center mt-4">
                    <a href="/" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </body>

