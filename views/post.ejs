                <li class="nav-item">
                    <a class="nav-link font-family" href="/register">Register</a>
                </li>
            </ul>
        </div>
    </nav>
</head>

<body>
    <div class="container">
        <h1><%= post.postName %></h1>
        <p><%= post.postDetails %></p>
        <p>Posted on: <%= timePosted(post.created_at) %></p>
        <h2>Comments:</h2>
        <% if (post.comments.length > 0) { %>
            <% post.comments.forEach(comment => { %>
                <div class="comment">
                    <p><%= comment.commentDetails %></p>
                    <p>Commented on: <%= timePosted(comment.commentCreatedAt) %></p>
                </div>
            <% }) %>
        <% } else { %>
            <p>No comments yet.</p>
        <% } %>
    </div>
    

</body>