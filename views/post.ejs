            h5{
                font-size:40px;
            }

            .container {
                margin-left: 80px;
                margin-right: 50px;
            }

            body {
                font-family: 'Baskervville SC', sans-serif;
                background-color: #092629;
            }

            p {
                color: #ffffff;
            }

            .font-title {
                font-size: 170%;
                font-family: "Pacifico", sans-serif;
            }

            .font-family {
                font-size: 164%;
                padding: 10px 14px;
            }

            .custom-navbar {
                background: transparent;
            }

            .custom-navbar .nav-link:hover {
                color: #ffffff !important;
                /* White text on hover */
            }

            .custom-navbar .nav-link {
                color: #80cbc4 !important;

            }

            .post-actions {
                margin-top: 10px;
            }

            p {
                color: black;
            }

            .form-control {
                width: 50%;
            }

            label {
                color: antiquewhite;
            }

            .card:hover {
                transform: scale(1); /* Scale up the card on hover */
                box-shadow: 0 10px 10px white; /* Add a shadow to create depth */
            }
        </style>

            <!-- navigation bar -->
    <!-- navigation bar -->
    <nav class="navbar navbar-expand-sm custom-navbar">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link font-title" href="/">Talk Wave</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-family" href="/addPost">Post</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-family" href="/aboutUs">About Us</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link font-family" href="/login">Login</a>
